# ============================================
# Cofactor Club - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# All marked REQUIRED must be set for production

# --------------------------------------------
# Database Configuration
# --------------------------------------------
POSTGRES_USER=cofactor
POSTGRES_PASSWORD=your_secure_db_password_here  # REQUIRED - Change this!
POSTGRES_DB=cofactor_db

# --------------------------------------------
# Application Configuration
# --------------------------------------------
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here  # REQUIRED - Change this!
NEXTAUTH_URL=https://your-domain.com

# --------------------------------------------
# Admin Account Seeding
# --------------------------------------------
ADMIN_EMAIL=admin@yourdomain.com  # REQUIRED
ADMIN_PASSWORD=your_admin_password_here  # REQUIRED - Use a strong password

# --------------------------------------------
# Staff Registration
# --------------------------------------------
# Secret code for staff signup (optional)
STAFF_SECRET_CODE=STAFF_2026

# --------------------------------------------
# SMTP Email Configuration
# --------------------------------------------
# Leave SMTP_USER empty to skip email configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here
SMTP_FROM="Cofactor Club" <no-reply@yourdomain.com>

# --------------------------------------------
# Cloudflare Tunnel (Production)
# --------------------------------------------
# Get your token from: https://dash.cloudflare.com/
# Leave empty to disable tunnel
CLOUDFLARE_TOKEN=

# --------------------------------------------
# Redis Configuration (Optional)
# --------------------------------------------
# Redis URL for production rate limiting
# Leave empty to use in-memory rate limiting (not recommended for production)
REDIS_URL=redis://localhost:6379

# --------------------------------------------
# Vercel Analytics (Optional)
# --------------------------------------------
# Get project ID from: https://vercel.com/analytics
# Automatically enabled with Vercel deployment
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# --------------------------------------------
# Sentry Error Tracking (Recommended for production)
# --------------------------------------------
# Get your DSN from: https://sentry.io/settings/projects/
NEXT_PUBLIC_SENTRY_DSN=https://your-dsn@sentry.io/project-id
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=your-project-slug
SENTRY_AUTH_TOKEN=your-auth-token
